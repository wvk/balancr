    <th></th>
  </tr>

<% @bank_accounts.each do |bank_account| %>
  <tr>
    <td><%= bank_account.user_id %></td>
    <td><%= bank_account.bank_name %></td>
    <td><%= bank_account.owner_name %></td>
    <td><%= bank_account.account_no %></td>
    <td><%= bank_account.blz %></td>
    <td><%= bank_account.iban %></td>
    <td><%= bank_account.bic %></td>
    <td><%= link_to 'Show', bank_account %></td>
    <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
    <td><%= link_to 'Destroy', bank_account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

