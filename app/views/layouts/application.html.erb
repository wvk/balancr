<!DOCTYPE html>
<html>
  <head>
    <title>Balancr</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <header>
      <h1>Balancr</h1>
    </header>

    <div id="main-container">
      <%= error_message %>
      <%= notice_message %>
      <%= yield %>

      <p class="bottom-nav">
        <% if can? :access, Project %>
          <%= link_to 'Projects', projects_path, :class => 'bottom-link' %>
        <% end %>

        <% if can? :access, User %>
          <%= link_to 'Users', users_path, :class => 'bottom-link' %>
        <% end %>

        <% if can? :access, Payment %>
          <%= link_to 'Payments', payments_path, :class => 'bottom-link' %>
        <% end %>

        <%= link_to 'log out', logout_path, :class => 'bottom-link' %>
      </p>
    </div>
  </body>
</html>
