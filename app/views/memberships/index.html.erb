<h1>Listing memberships</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th>Is bank</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.user.to_s, membership.user %></td>
        <td><%= link_to membership.project.to_s, membership.project %></td>
        <td><%= raw membership.is_bank ? '<i class="glyphicon glyphicon-ok"></i>' : '' %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Membership', new_membership_path %>
