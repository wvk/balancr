<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Members</th>
      <th>Total cost</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.description %></td>
        <td><%= project.date %></td>
        <td>
          <ul class="list-unstyled">
            <% project.users.each do |user| %>
              <li><%= link_to user.login, user %></li>
            <% end %>
          </ul>
        </td>
        <td><%=m project.total_cost %></td>
        <% if can? :access, project %>
          <td><%= link_to 'Show', project %></td>
        <% end %>
        <% if can? :edit, project %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <% end %>
        <% if can? :destroy, project %>
          <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
        <% end %>
        <% if can? :invite, project %>
          <td><%= link_to 'Invite', invite_project_path(project) %></td>
        <% end %>
        <% if can? :assign, project %>
          <td><%= link_to 'Assign', assign_project_path(project) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
