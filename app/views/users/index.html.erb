<h2>Registered Users</h2>

<table>
  <tr>
    <th>Login</th>
    <th>Forename</th>
    <th>Surname</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.login, user %></td>
      <td><%= user.forename %></td>
      <td><%= user.surname %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>

</table>

<br />

<%= link_to 'New User', new_user_path %>
